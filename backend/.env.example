# Hospital Management System - Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=mysql+pymysql://root:@localhost/hospital_db

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-minimum-32-chars
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security Notes:
# 1. Never commit .env file to version control
# 2. Use strong random strings for SECRET_KEY and ENCRYPTION_KEY
# 3. Generate keys using: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 4. In production, use environment variables or secrets management service
# 5. Rotate keys regularly
